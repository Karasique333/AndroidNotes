<resources>


    <style name="Theme.MyNotes.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/cardview_shadow_start_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="TextColor">@color/black</item>
        <item name="Themeicon">@drawable/theme</item>


        <item name="noteBackgroundColor">@color/noteBackgroundLight</item>
        <item name="noteStrokeColor">@color/noteStrokeLight</item>
    </style>


    <style name="Theme.MyNotes.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/material_dynamic_neutral10</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_neutral50</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="Themeicon">@drawable/theme_dark</item>


        <item name="noteBackgroundColor">@color/noteBackgroundDark</item>
        <item name="noteStrokeColor">@color/noteStrokeDark</item>
        <item name="EditColorSolid">@color/EditColorSolid</item>
        <item name="EditColorStroke">@color/EditColorStroke</item>
        <item name="TextColor">@color/white</item>


    </style>

</resources>
